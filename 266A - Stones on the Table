#include <iostream>

using namespace std;

int main()
{
    int n, count_color = 0;
    cin >> n;
    char color[n];
    for(int i = 0; i < n; i++)
    {
        cin >> color[i];
    }

    for(int i = 0; i < n; i++)
    {
        if(color[i] == color[i+1])
        {
            count_color++;
        }
    }
    cout << count_color << endl;
    return 0;
}
